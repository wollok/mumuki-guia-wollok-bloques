test "Configura el botón rojo para que pepita" {
  var ejecutoRojo = false
  var ejecutoAzul = false
  robot.accionRojo { ejecutoRojo = true }
  robot.accionAzul { ejecutoAzul = true }
  assert.that(ejecuto)
}

test "Al presionar el botón rojo el robot no ejecuta la acción azul" {
  var ejecuto = false
  robot.accionRojo { ejecuto = true }
  assert.that(ejecuto)
}

test "Al presionar el botón rojo el robot ejecuta la acción roja" {
  var ejecuto = false
  robot.accionRojo { ejecuto = true }
  assert.that(ejecuto)
}

test "Al presionar el botón rojo el robot ejecuta la acción roja" {
  var ejecuto = false
  robot.accionRojo { ejecuto = true }
  assert.that(ejecuto)
}
